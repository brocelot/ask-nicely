{
  "name": "ask-nicely",
  "version": "3.0.2",
  "description": "Easily create command-line applications by configuring commands, options and parameters that are supermagically parsed.",
  "repository": "wvbe/ask-nicely",
  "author": {
    "name": "Wybe Minnebo",
    "email": "wybe@x-54.com",
    "url": "https://github.com/wvbe"
  },
  "license": "MIT",
  "homepage": "https://github.com/wvbe/ask-nicely",
  "keywords": [
    "argument",
    "argv",
    "command",
    "option",
    "parameter",
    "parsing",
    "shell",
    "terminal"
  ],
  "main": "dist/AskNicely.js",
  "directories": {
    "example": "./examples",
    "lib": "./src",
    "test": "./test"
  },
  "scripts": {
    "test-bare": "mocha test",
    "test": "istanbul cover _mocha",
    "build": "mkdir dist; rollup AskNicely.js --format umd --name ask-nicely | babel --filename AskNicely.js > dist/AskNicely.js",
    "prepublish": "npm run build"
  },
  "engines": {
    "node": ">=4.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "rollup": "^0.67.3"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "8"
          }
        }
      ]
    ]
  }
}
